<%- include("./includes/head") %>
  <link rel="stylesheet" href="/css/review.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script>
    function abc(){
      alert("Thankyou for your valuable feedback.")
    }
  </script>
</head>
<body>
  <%- include("./includes/navigation") %>
  <div class="row">
    <div class="logo">
    <img src="/img/logo.png">
  </div>
  <h3 class="para2" style="font-size:50px; margin-left: 180px;">Give your valuable feedback</h3>
  <form action="/reviews" method="POST" class="form">
      <div class="form-group">
        <label for="usr">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="contact">Contact No.:</label>
        <input type="number" class="form-control" id="phone" name="phone" required>
      </div>
      <div class="form-group">
        <label for="comment">Comments:</label>
        <textarea class="form-control" rows="3" id="comments" name="comments" required></textarea>
      </div>
    <button class="button" type="submit" onclick="abc()" style="color: black;">Submit</button>
  </form>
  <%- include("./includes/footer") %>
</body>
